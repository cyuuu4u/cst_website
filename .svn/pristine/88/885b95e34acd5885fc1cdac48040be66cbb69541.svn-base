@charset "utf-8";

body {
    width:-webkit-calc(100% - 12px);
    width:-moz-calc(100% - 12px);
    width:calc(100% - 12px);
    height:-webkit-calc(100% - 12px);
    height:-moz-calc(100% - 12px);
    height:calc(100% - 12px);
    padding: 5px;
}

#idLayoutPage {
    width: 100%;
    height: 100%;
    overflow: scroll;
}

#idSecondLevel {
    margin: 0 10px;
}

.editorCombobox{
    margin:10px 20px;
    font-size: 1.2rem;

}
.editorArea{
    width:100%;
    height: 90%;
    text-align: center;
}
textarea{
    width: 95%;
    margin: 0 auto;
    height: 100%;
    text-align: left;
}


