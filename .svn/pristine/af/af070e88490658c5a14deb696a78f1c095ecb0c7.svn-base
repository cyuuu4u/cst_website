
#root {
    width:1080px;
    background-color: #FFFFFF;
    padding:0;
    margin: 0 auto;
}

.row{
    width: 980px;
    max-width: 980px;
    min-width: 599px;
    margin: 0 auto;
    text-align: left;
}


#navMenu{
    position: relative;
    float: right;
    right: 0;
    top: 0;
}

#language_bar {
    clear: left;
    list-style-type: none;
    width:100%;
    height:28px;
}

ul.menu > li{
    float: left;
    list-style: none;
    display: block;
    right: 1px;
    overflow: hidden;
    cursor: pointer;
    border-right: 1px dotted #b0b5b5;
}

ul.menu > li:first-child{
    border-left: 1px dotted #b0b5b5;
}

ul.version{
    float: left;
    width:100%;
    height: 100%;
    margin: 0;
    border-top: 1px dotted #b0b5b5;
    border-bottom: 1px dotted #b0b5b5;
    position: relative;
    z-index: 15;
}

#language_bar ul li a{
    color: #000;
    line-height: 28px;
    display: inline;
    font-family:"Microsoft YaHei UI";
    /*font-weight: bold;*/
    letter-spacing: normal;
    word-spacing: 0.1rem;
}

#language_bar ul li a:hover, a.active {
    color: red;
}

#language_bar li.search {
    position: relative;
    right: 0;
}

li.version {
    float: left;
    list-style-type: none;
}

li.search{
    float: right;
    list-style-type: none;
}

li.search form{
    margin: 0;
    padding: 0;
}

#to_search {
    width: 220px;
    height: 24px;
    margin-top: 2px;
    margin-right: 2px;
    padding-top: 0;
    border: solid 1px #eee;
    vertical-align: text-bottom;
}

.show-image{
    width: 980px;
    min-height: 451px;
    margin:0 0 24px -494px;
    padding: 0 50px;
    position: relative;
    float: left;
    z-index: 0;
}

#pic_news {
    position:absolute;
    float: left;
    display: block;
    left:460px;
    top:2px;
    max-width: 100%;
    z-index: 0;
    margin: 0;
    padding:0;
    border: 0;
    font:inherit;
    width:1072px;
    height:452px;
    overflow: hidden;
}

#pic_news_shade {
    position:absolute;
    float: left;
    display: block;
    left:460px;
    top:2px;
    max-width: 100%;
    z-index: 0;
    margin: 0;
    padding:0;
    border: 0;
    font:inherit;
    width:1072px;
    height:452px;
}

.image-introduction{
    width:119px !important;
    color: #FFFFFF;
    display: block;
    position: absolute;
    bottom: 0;
    right:-400px;/**/
    z-index: 15;
    float: left;
    min-height: 1px;
    margin: 0;
    padding: 0;
    border:0;
    height: 195px;
}

#pic_news_title {
    width:119px;
    height: 167px;
    background: url("../images/pic_news_title.png") no-repeat;
    font-size: 1.4rem;
    font-weight: bold;
    color: white;
    padding: 0;
}

.inner_content {
    padding: 30px 10px 10px 10px;

}

#pic_news_title p {
    font-size: 1.2rem;
    font-weight: normal;
    margin-top: 10px;
}

.page{
    position: relative;
    float: left;
    margin: 5px 0 0 0;
}

#pic_news_previous {
    width: 26px;
    height: 26px;
    margin: 2px 2px 0 0;
    text-indent: -9999px;
    display: inline-block;
    float: left;
    cursor: pointer;/*光标样式*/
    color: #FFFFFF;
    background-image: url("../images/pic_news_previous.jpg");
}
#pic_news_next{
    width: 26px;
    height: 26px;
    margin: 2px 2px 0 0;
    text-indent: -9999px;
    display: inline-block;
    float: left;
    cursor: pointer;/*光标样式*/
    color: #FFFFFF;
    /*background-color: black;*/
    background-image: url("../images/pic_news_next.jpg");
}

.news_title{
    width:980px;
    margin-left: 0;
    float: left;
    position: relative;
    top: 10px;
    left : 0;
    height: 32px;
}

a:hover a:visited{
    color: red;
}

.pic_news_obj{
    width:1071px;
    height: 452px;
}

#pic_news_obj_shade{
    width:1071px;
    height: 452px;
}

#last_row {
    margin-top: 5px;
}


/*-------------英文index--------------*/

.header_en{/*和row作用相同*/
    width: 1080px;
    max-width: 1040px;
    min-width: 599px;
    margin: 0 auto;
    text-align: left;
}

#logo_en {
    position: relative;
    float: left;
    left: 0;
    top: 0;
    width:339px;
    height:141px;
    margin: 0;
}

div.nav_menu_en {
    position:relative;
    float: left;
    left: 0;
    top: 0;
    width:159px;
    height:141px;
    opacity: 1;
}

.nav_img_en {
    width: 159px;
    height:141px;
}

.news_left_en {
    position:relative;
    float: left;
    left : 0;
    top:20px;
    width:284px;
    height: 480px;
    margin: 0 25px 0 0;/*上右下左*/
    overflow: hidden;
    -webkit-box-shadow: -4px 4px 5px 0 #c9c9c9;
    -moz-box-shadow: -4px 4px 5px 0 #c9c9c9;
    box-shadow: -4px 4px 5px 0 #c9c9c9;
}

.news_img_en{
    width: 284px;
    height: 208px;
}

.news_container_en{
    position:relative;
    float: left;
    margin: 25px 25px 25px 25px;
}

.release_time_en{
    font-family: Helvetica;
    color: #c9c9c9;
    margin:0 0 10px 0;
}

.news_title_en{
    font-family: Helvetica;
    color: #7d7d7d;
    font-weight: bold;
    margin: 0 0 15px 0;
}

.news_content_en{
    font-family: Helvetica;
    color: #c9c9c9;
    margin: 15px 0 0 0;
}

.news_right_en{
    position:relative;
    float: left;
    left : 0;
    top:20px;
    width:300px;
    height: 480px;
    margin: 0 0 0 25px;
}
.right_container_en{
    height:460px;
    overflow: hidden;
}


.news_item_en {
    font-family: Helvetica;
    font-size: 12px;
    color: #7d7d7d;
    margin: 25px 0 0 0;
}

.news_date_en {
    font-family: Helvetica;
    font-weight: normal;
    font-size: 12px;
    font-style: italic;
    color: #0090d6;
}